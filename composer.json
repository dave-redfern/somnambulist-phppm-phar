{
    "name": "somnambulist/php-pm-phar",
    "type": "library",
    "description": "Phar archive builder for php-pm",
    "license": "MIT",
    "require": {
        "php": ">=7",
        "php-pm/php-pm": "^1.0",
        "php-pm/httpkernel-adapter": "^1.0",
        "symfony/console": "^3.3|^4.0",
        "symfony/finder": "^3.3|^4.0"
    },
    "autoload": {
        "psr-4": {
            "PHPPM\\": "src/"
        }
    },
    "config": {
        "bin-dir": "bin"
    }
}
